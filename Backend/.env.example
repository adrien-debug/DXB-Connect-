# Server
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dxbconnect

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_SUCCESS_URL=https://app.dxbconnect.com/orders/success
STRIPE_CANCEL_URL=https://app.dxbconnect.com/checkout/cancel

# eSIM Provider (legacy)
ESIM_PROVIDER=esimaccess
ESIM_PROVIDER_API_URL=https://api.esimaccess.com
ESIM_PROVIDER_API_KEY=your-provider-api-key

# eSIM Access API (https://docs.esimaccess.com)
ESIM_ACCESS_BASE_URL=https://api.esimaccess.com
ESIM_ACCESS_CODE=your-access-code
ESIM_ACCESS_SECRET=your-secret-key

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@dxbconnect.com

# Frontend URLs
CLIENT_APP_URL=https://app.dxbconnect.com
ADMIN_APP_URL=https://admin.dxbconnect.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
